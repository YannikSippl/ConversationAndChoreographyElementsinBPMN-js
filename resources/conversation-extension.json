{
    "name": "ConversationExtension",
    "uri": "http://example.com/conversation",
    "prefix": "conversation",
    "xml": {
        "tagAlias": "lowerCase"
    },
    "types": [
        {
            "name": "ConversationNode",
            "superClass": [
                "bpmn:Task"
            ],
            "properties": [
                {
                    "name": "participants",
                    "type": "String",
                    "isMany": true
                }
            ]
        },
        {
            "name": "ConversationLink",
            "superClass": [
                "bpmn:SequenceFlow"
            ],
            "properties": [
                {
                    "name": "source",
                    "type": "ConversationNode"
                },
                {
                    "name": "target",
                    "type": "ConversationNode"
                }
            ]
        }
    ]
}